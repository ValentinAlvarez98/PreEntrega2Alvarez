<h1>Lista de Productos</h1>
<ul>
      {{#each products}}
      <li>
            <h2>{{this.title}}</h2>
            <p>Categoría: {{this.category}}</p>
            <p>Precio: {{this.price}}</p>
            <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}">

            <!-- Agregar al carrito -->
            <form action="/addToCart" method="post">
                  <input type="hidden" name="productId" value="{{this.id}}">
                  <input type="submit" value="Agregar al carrito">
            </form>

            <!-- Enlace para ver detalles -->
            <a href="/products/{{this.id}}">Ver detalles</a>
      </li>
      {{/each}}
</ul>

<!-- Paginación -->
{{#if hasNextPage}}
<a href="/products?page={{nextPage}}">Siguiente</a>
{{/if}}
{{#if hasPrevPage}}
<a href="/products?page={{prevPage}}">Anterior</a>
{{/if}}